mixin css(path)
	link(rel="stylesheet" href=path)

mixin script(path)
	script(type="text/javascript" src=path)

doctype
html
	head
		+css("public/lib/bootstrap/bootstrap.min.css")
		+css("public/css/style.css")

		block script
			+script("https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
			+script("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")

		title Oracle Server ui
		
	body
		header
			nav.navbar.navbar-inverse(role='navigation')
				.container
					.navbar-header
						a.navbar-brand(href='/') Oracle	
						ul.nav.navbar-nav.navbar-left
							li 
								a(href="/followers") Twitter Followers
							li 
								a(href="/google") Google
							li 
								a(href="/bitcoin_binary") Binary Options
			.container
				block content

		footer
