			input(type='hidden', name='script-tmpl', value=script_tmpl)

		block script-def
			.row
				.col-md-6
					.form-group
						label(for="alice") User A public Key
						input.form-control.input-lg(type="text", name="alice", value='', required)
				.col-md-6
					.form-group
						label(for="bob") User B Public Key
						input.form-control.input-lg(type="text", name="bob", value='', required)

		.btn-cntr: input.btn.btn-primary.btn-lg(type="submit", value="Create Smart Contract")

