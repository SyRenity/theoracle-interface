extends templateform

append vars
	- active = 'binary'

block headline
	h2 BTC/USD Binary Option Contract

prepend script-def
	.row
		.col-md-6
			.form-group
				label(for="current_value")  The current bitcoin value
				input.form-control.input-lg(data-tmpl-name="current_price", data-tmpl-num, readonly, value=current_value, required)
		.col-md-6
			.form-group		
				label(for="expiration_date") Expiration date
				input.form-control.input-lg(data-tmpl-name="expiration_date", data-tmpl-time, value=expiration_date, required)
		
	.row
		.col-md-6
			.form-group
				label(for="put_address") The PUT trader bitcoin address
				input.form-control.input-lg(placeholder="e.g. mxRN6AQJaDi5R6KmvMaEmZGe3n5ScV9u33", data-tmpl-name="put_trader_address", required)
		.col-md-6
			.form-group
				label(for="call_address") The CALL trader bitcoin address
				input.form-control.input-lg(placeholder="e.g. mrj2K6txjo2QBcSmuAzHj4nD1oXSEJE1Qo", data-tmpl-name="call_trader_address", required)
