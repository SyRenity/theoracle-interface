extends templateform

block headline
	h2 Create Followers Contract
prepend script-def
	.row
		.col-md-6
			.form-group
				label(for="screen_name")  Twitter screen name
				input.form-control.input-lg(name="screen-name", required)
		
		.col-md-6
			.form-group
				label(for="needed_followers") Needed followers
				input.form-control.input-lg(name="needed_followers", required)

	.row
		.col-md-6
			.form-group
				label(for="company_address")  The social marketing company bitcoin address
				input.form-control.input-lg(name="company_address", required)
	
		.col-md-6
			.form-group
				label(for="customer_address")  The customer bitcoin address
				input.form-control.input-lg(name="customer_address", required)

append script-def
	.row
		.col-md-6
			.form-group
				label(for="expiration_date") Expiration date
				input.form-control.input-lg(name="expiration_date", value=expiration_date, required)
